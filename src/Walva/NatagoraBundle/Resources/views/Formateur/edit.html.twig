{% extends "WalvaNatagoraBundle:Formateur:layout.html.twig" %}

{% block body -%}
<h1>Formateur edit</h1>

<form action="{{ path('formateur_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<div class="pull-right">
    <form action="{{ path('formateur_delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
        <button type="submit" class="btn">Delete</button>
    </form>
</div>


{% endblock %}





