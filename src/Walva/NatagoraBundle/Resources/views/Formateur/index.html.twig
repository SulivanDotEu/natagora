{% extends "WalvaNatagoraBundle:Formateur:layout.html.twig" %}

{% block breadcrumb %}
{{ parent() }}
<li class="active">list</li>
{% endblock %}

{% block body -%}
    <h1>Formateur list</h1>

    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Gsm</th>
                <th>Mail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('formateur_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.prenom }} {{ entity.nom }} </td>
                <td>{{ entity.gsm }}</td>
                <td>{{ entity.mail }}</td>
                <td>
                     <div class="btn-group">
                                <a class="btn" href="{{ path('formateur_show', { 'id': entity.id }) }} ">
                                    <i class="icon-eye-open"></i> Show</a>
                                <a class="btn" href="{{ path('formateur_edit', { 'id': entity.id }) }}">
                                    <i class="icon-pencil"></i> Edit</a>
                            </div>
                   
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  
    {% endblock %}
    
    {% block container_header_right %}
            <a class="btn btn-primary" href="{{ path('formateur_new') }}">
                <i class="icon-plus icon-white"></i> 
                Create a new entry
            </a>
{% endblock %}