{% extends "WalvaNatagoraBundle:Evenement:layout.html.twig" %}

{% block body -%}
<h1>Evenement</h1>

<table class="table table-striped">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ entity.date|date('d/m/Y') }}</td>
        </tr>
        <tr>
            <th>Formateur</th>
            <td>{{ entity.formateur }}</td>
        </tr>
        <tr>
            <th>Lieu</th>
            <td>{{ entity.lieu }}</td>
        </tr>
        <tr>
            <th>Type  {{ 'test'|trans}}</th>
            <td>{{ ('evenement.type.'~entity.type)|trans }}</td>
        </tr>
        <tr>
            <th>Etat</th>
            <td>{{ ('evenement.etat.'~entity.etat)|trans }}</td>
        </tr>
        <tr>
            <th>Min</th>
            <td>{{ entity.min }}</td>
        </tr>
        <tr>
            <th>Max</th>
            <td>{{ entity.max }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
    </tbody>
</table>

<h2>Liste des inscriptions</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Position</th>
            <th></th>
            <th>test</th>
        </tr>
    </thead>
    <tbody>
        {% for inscription in entity.inscriptions  %}
        <tr>
            <td>{{inscription.eleve}}</td>
            <td>{{inscription.eleve}}</td>
            <td>{{inscription.date | date('d/m/Y H:i')}}</td>
            <td></td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('evenement') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('evenement_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('evenement_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
