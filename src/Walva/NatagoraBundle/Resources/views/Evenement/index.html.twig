{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Evenement list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Formateur</th>
                <th>Lieu</th>
                <th>Type</th>
                <th>Etat</th>
                <th>Min</th>
                <th>Max</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('evenement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.formateur }}</td>
                <td>{{ entity.lieu }}</td>
                <td>{{ entity.type }}</td>
                <td>{{ entity.etat }}</td>
                <td>{{ entity.min }}</td>
                <td>{{ entity.max }}</td>
                <td>{{ entity.description }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('evenement_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('evenement_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('evenement_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
