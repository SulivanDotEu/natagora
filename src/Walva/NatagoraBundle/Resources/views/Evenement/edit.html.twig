{% extends "WalvaNatagoraBundle:Evenement:layout.html.twig" %}


{% block breadcrumb %}
{{ parent() }}
<li class="active">Edit</li>
{% endblock %}



{% block body -%}
<h1>Evenement edit</h1>
<hr/>

<form class="form-horizontal" action="{{ path('evenement_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <input type="hidden" name="_method" value="PUT" />

        {{ form_widget(edit_form, {'form_type': 'horizontal'}) }}

    <br>
    <div class="form-actions">

        <button class="btn btn-primary" name="submit" type="submit" value="show">Edit and show</button>
        <button class="btn " name="submit" type="submit" value="list">Edit and go to the list</button>
        <button class="btn " name="submit" type="submit" value="edit">Edit and represent form</button>
    </div>
</form>
<div class="pull-right">
    <form action="{{ path('evenement_delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>



{% endblock %}


    {% block container_header_right %}
<a class="btn " href="{{ path('evenement') }}">
    <i class="icon-chevron-left"></i> 
    Back to the list
</a>

{% endblock %}