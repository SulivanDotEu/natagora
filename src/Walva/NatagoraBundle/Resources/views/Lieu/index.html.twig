{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Lieu list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rue</th>
                <th>Codepostal</th>
                <th>Numero</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Urlgooglemap</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('lieu_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.rue }}</td>
                <td>{{ entity.codePostal }}</td>
                <td>{{ entity.numero }}</td>
                <td>{{ entity.latitude }}</td>
                <td>{{ entity.longitude }}</td>
                <td>{{ entity.urlGoogleMap }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('lieu_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('lieu_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('lieu_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
