{% extends "WalvaNatagoraBundle:Eleve:layout.html.twig" %}


{% block breadcrumb %}
{{ parent() }}
<li class="active">Creation</li>
{% endblock %}

{% block body -%}
    <h1>Eleve creation</h1>
    <hr>
    <form class="form-horizontal" action="{{ path('eleve_create') }}" method="post" {{ form_enctype(form) }}>
       {{ form_widget(form, {'form_type': 'horizontal'}) }}
        <div class="form-actions">
            <button class="btn btn-primary" name="submit" type="submit" value="show">Create and show</button>
            <button class="btn " name="submit" type="submit" value="list">Create and go to the list</button>
            <button class="btn " name="submit" type="submit" value="create">Create and create an other entry</button>
        </div>
    </form>

{% endblock %}

    
        {% block container_header_right %}
<div class="btn-group">
    <a class="btn " href="{{ path('eleve') }}">
        <i class="icon-chevron-left"></i> 
        Back to the list
    </a>
</div>
{% endblock %}