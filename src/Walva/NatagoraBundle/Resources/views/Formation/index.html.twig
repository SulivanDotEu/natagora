{% extends "WalvaNatagoraBundle:Formation:layout.html.twig" %}


{% block breadcrumb %}
{{ parent() }}
<li class="active">list</li>
{% endblock %}


{% block body -%}
<h1>Formation list</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Nom complet</th>
            <th>Couleur</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('formation_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.nomComplet }}</td>
                <td>{{ ('couleur.' ~ entity.couleur) | trans | label(entity.couleur) | raw }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn" href="{{ path('formation_show', { 'id': entity.id }) }} ">
                            <i class="icon-eye-open"></i> Show</a>
                        <a class="btn" href="{{ path('formation_edit', { 'id': entity.id }) }}">
                            <i class="icon-pencil"></i> Edit</a>
                    </div>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}


{% block container_header_right %}
            <a class="btn btn-primary" href="{{ path('formation_new') }}">
                <i class="icon-plus icon-white"></i> 
                Create a new entry
            </a>
{% endblock %}