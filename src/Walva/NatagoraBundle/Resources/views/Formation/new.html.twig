{% extends "WalvaNatagoraBundle:Formation:layout.html.twig" %}

{% block breadcrumb %}
{{ parent() }}
<li class="active">Creation</li>
{% endblock %}


{% block body -%}
    <h1>Formation creation</h1>

    <form action="{{ path('formation_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <p>
            <button type="submit" class="btn">Create</button>
        </p>
    </form>

{% endblock %}

    
{% block container_header_right %}
<div class="btn-group">
    <a class="btn " href="{{ path('formation') }}">
        <i class="icon-chevron-left"></i> 
        Back to the list
    </a>
</div>
{% endblock %}