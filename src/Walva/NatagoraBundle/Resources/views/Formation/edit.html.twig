{% extends "WalvaNatagoraBundle:Formation:layout.html.twig" %}


{% block breadcrumb %}
{{ parent() }}
<li class="active">Edit</li>
{% endblock %}


{% block body -%}
<h1>Formation edit</h1>

<form action="{{ path('formation_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
    <p>
            <button type="submit" class="btn">Edit</button>
    </p>
</form>

<div class="pull-right">
<form action="{{ path('formation_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn">Delete</button>
        </form>
</div>
{% endblock %}


{% block container_header_right %}
<a class="btn " href="{{ path('formation') }}">
    <i class="icon-chevron-left"></i> 
    Back to the list
</a>

{% endblock %}